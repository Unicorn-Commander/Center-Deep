# Center Deep Configuration
# Copy this file to .env and customize for your installation

# Admin Credentials (CHANGE THESE!)
ADMIN_USERNAME=ucadmin
ADMIN_PASSWORD=MagicUnicorn!8-)

# Redis Configuration
# Option 1: Use included Redis (default)
USE_EXTERNAL_REDIS=false

# Option 2: Use external Redis (uncomment and configure)
# USE_EXTERNAL_REDIS=true
# EXTERNAL_REDIS_HOST=localhost
# EXTERNAL_REDIS_PORT=6379
# EXTERNAL_REDIS_PASSWORD=
# EXTERNAL_REDIS_DB=0

# Search Engine Configuration
SEARXNG_SECRET_KEY=ultrasecretkey
SEARCH_TIMEOUT=10
MAX_RESULTS=20
SAFE_SEARCH=moderate

# LLM Configuration (Optional - for AI features)
# OpenAI
# SEARCH_LLM_API_BASE=https://api.openai.com/v1
# SEARCH_LLM_API_KEY=your-openai-api-key
# SEARCH_LLM_MODEL=gpt-3.5-turbo

# Anthropic Claude
# SEARCH_LLM_API_BASE=https://api.anthropic.com/v1
# SEARCH_LLM_API_KEY=your-anthropic-api-key
# SEARCH_LLM_MODEL=claude-3-sonnet

# Local Ollama
# SEARCH_LLM_API_BASE=http://localhost:11434/api
# SEARCH_LLM_MODEL=llama2

# Tool Server Configuration
TOOL_SEARCH_ENABLED=true
TOOL_DEEP_SEARCH_ENABLED=true
TOOL_REPORT_ENABLED=true
TOOL_ACADEMIC_ENABLED=true

# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=production

# Proxy Configuration (Optional)
# PROXY_ENABLED=false
# PROXY_URL=http://proxy.example.com:8080
# PROXY_USERNAME=
# PROXY_PASSWORD=